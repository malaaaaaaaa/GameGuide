<EditForm Model="@tag" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <fieldset disabled = "@Disabled">
        <div class="form-group">
            <label>Tag Name: </label>
            <div>
                <InputText @bind-Value="@tag.Name" class="form-control" />
                <ValidationMessage For="@(() => tag.Name)" />
            </div>
        </div>

        <div class="form-group">
            <label>Tag Description: </label>
            <div>
                <InputTextArea @bind-Value="@tag.Description" class="form-control" style="height: 300px;" />
                <ValidationMessage For="@(() => tag.Description)" />
            </div>
        </div>
    </fieldset>
    <br />
    @if (!Disabled)
    {
        <button type="submit" class="btn btn-success btn-block">
            @ButtonText
        </button>
    }
    <BackToList Target="@Target"/>
</EditForm>

@code {
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public Tag? tag { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
    [Parameter] public string Target { get; set; }

}
